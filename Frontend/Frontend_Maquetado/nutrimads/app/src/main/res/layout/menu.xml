<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center">

    <Button
        android:id="@+id/button"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:background="@drawable/borde"
        android:drawableLeft="@drawable/search_black_18dp"
        android:drawableTint="#4CAF50"
        android:paddingStart="5dp"
        android:paddingEnd="20dp"
        android:text="Busqueda de alimentos"
        android:textColor="#FFFFFF"
        android:textSize="9sp"
        android:onClick="irABuscador"
        />

    <Button
        android:layout_marginTop="3dp"
        android:id="@+id/button2"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:text="Contador de nutrientes"
        android:textColor="#FFFFFF"
        android:textSize="9sp"
        android:background="@drawable/borde"
        android:drawableLeft="@drawable/bar_chart_black_18dp"
        android:drawableTint="#4CAF50"
        android:paddingStart="5dp"
        android:paddingEnd="17dp"
        android:layout_gravity="center"
        android:onClick="irAContador"
        />
    <Button
        android:layout_marginTop="3dp"
        android:id="@+id/button3"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:text="Recordatorios de ingesta"
        android:textColor="#FFFFFF"
        android:textSize="9sp"
        android:background="@drawable/borde"
        android:drawableLeft="@drawable/calendar_month_black_18dp"
        android:drawableTint="#4CAF50"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:layout_gravity="center"
        android:onClick="irARecordatorio"
        />
    <Button
        android:layout_marginTop="3dp"
        android:id="@+id/button4"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:text="Recomendaciones"
        android:textColor="#FFFFFF"
        android:textSize="9sp"
        android:background="@drawable/borde"
        android:drawableLeft="@drawable/sentiment_satisfied_black_18dp"
        android:drawableTint="#4CAF50"
        android:paddingStart="5dp"
        android:paddingEnd="44dp"
        android:layout_gravity="center"
        android:onClick="irARecomendaciones"
        />

    <Button
        android:layout_marginTop="3dp"
        android:id="@+id/button5"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:text="Asistente de voz"
        android:textColor="#FFFFFF"
        android:textSize="9sp"
        android:background="@drawable/borde"
        android:drawableLeft="@drawable/mic_black_18dp"
        android:drawableTint="#4CAF50"
        android:paddingStart="5dp"
        android:paddingEnd="50dp"
        android:layout_gravity="center"
        android:onClick="irAAsistente"
        />

    <Button
        android:id="@+id/button6"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:background="@drawable/borde"
        android:drawableLeft="@drawable/info_black_18dp"
        android:drawableTint="#4CAF50"
        android:paddingStart="5dp"
        android:paddingEnd="28dp"
        android:text="Acerca de nutrimads"
        android:textColor="#FFFFFF"
        android:textSize="9sp"
        android:onClick="irAAcercade"/>

</LinearLayout>